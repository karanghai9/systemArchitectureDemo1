pipeline {
    agent any
    tools {
        ant 'Ant'
        jdk 'JDK17'
    }
    stages {
        stage('Clean') 
        {
            steps 
            {
                sh "ant clean"
            }
        }
        stage('Build') 
        {
            steps 
            {
                sh "ant build"
            }
        }
        stage('Test') 
        {
            steps 
            {
                sh "ant AdditionTest"
            }
        }
        stage('Mutation_Testing') 
        {
            steps 
            {
                sh "ant pit"
            }
        }
        stage('Find_Bugs') 
        {
            steps 
            {
                sh "ant spotbugs"
            }
        }
    }
}
